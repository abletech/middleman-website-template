{
  "name": "<%= data.site.name %>",
  "description": "<%= data.site.description %>",
  <% if data.site.try(:orientation) %>
  "orientation": "<%= data.site.orientation %>",
  <% end %>
  <% if data.site.try(:display) %>
  "display": "<%= data.site.display %>",
  <% end %>
  "theme_color": "<%= data.site.theme.background_color %>",
  <% if data.site.try(:icons) && data.site.icons.length > 0 %>
  "icons": [
    <% data.site.icons.each_with_index do |icon, index| %>
    {
      "href": "<%= icon.href %>",
      "sizes": "<%= icon.sizes %>"
    }<%= ',' if index + 1 < data.site.icons.count %>
    <% end %>
  ],
  <% end %>
  "short_name": "<%= data.site.short_name %>"
}
